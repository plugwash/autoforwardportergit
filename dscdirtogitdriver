SCRIPTDIR=`dirname $(readlink -f $0)`
$SCRIPTDIR/afpg_readconfig.py main:workingrepo main:gitdir main:tmp main:AFPGCONFIG main:localmarker main:revertmarker main:importname main:importemail | . /dev/stdin
#!/bin/bash -e

for PACKAGE1 in $(cat $AFPGCONFIG/whitelist ) ; do
    #| grep -v glibc
    if [[ $PACKAGE == lib* ]]; then
        PACKAGEDIR=${PACKAGE:0:4}/$PACKAGE
    else
        PACKAGEDIR=${PACKAGE:0:1}/$PACKAGE
    fi

    mkdir -p ${gitdir}/$PACKAGEDIR
    cd ${gitdir}/$PACKAGEDIR
    if [ ! -d .git ]; then
        git init
    fi
    git config --local user.name "$importname"
    git config --local user.email "$importemail"
    ${SCRIPTDIR}/dscdirtogit $workingrepo/pool/*/$PACKAGEDIR +rpi$+rvt 

done